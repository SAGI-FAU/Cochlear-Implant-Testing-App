<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0sp"
    android:layout_marginRight="0sp">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Einstellungen"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#ffffff"
        android:lines="1"
        android:textSize="36sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />




    <TextView
        android:id="@+id/textViewNotifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Zeit für Benachrichtigungen"
        android:layout_marginTop="100sp"
        android:layout_marginStart="8sp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:lines="1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
        android:id="@+id/SpinnerNotifications"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="4"
        app:layout_constraintWidth_percent="0.35"
        android:layout_marginTop="100sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="9:00"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        />



    <Button
        android:id="@+id/button_update_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="4"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80sp"
        android:layout_marginBottom="8dp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimaryDark"
        android:text="Profil Aktualisieren"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNotifications" />

    <Button
        android:id="@+id/button_restart_session"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="4"
        app:layout_constraintWidth_percent="0.7"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPrimaryDark"
        android:text="Übungseinheit Zurücksetzen"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/button_update_profile" />




</androidx.constraintlayout.widget.ConstraintLayout>